<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:background="@color/creamlight"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pagesss.ui.home.HomeFragment"
        android:label="@string/title_home"
        android:background="@color/creamlight"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.pagesss.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_scrolling"
        android:name="com.example.pagesss.ui.scrolling.ScrollingFragment"
        android:label="Kawasan"
        tools:layout="@layout/fragment_scrolling" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.pagesss.ui.notifications.NotificationsFragment"
        android:label="Tentang"
        tools:layout="@layout/fragment_notifications" />

</navigation>